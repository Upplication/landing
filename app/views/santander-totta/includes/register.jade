//- REGISTER PANEL :: "15 days free trial" (DESKTOP - LAPTOP)
.register-form.right(data-aos='fade-up')
    .row.register-top
        form(name="register", action="/register", method="post").col.s12.register-form-block
            input(type="hidden", name="customerType", value="SANTANDER")
            input(type="hidden", name="request_locale", value="pt")
            p.error.general-error.display-none #{santander_totta.form.error.general}
            .row.marBot10
                .input-field.col.s12
                    input#app_name.validate(type='text', name='appName', required)
                    label(for='app_name') #{santander_totta.form.input.name}
                    p.error.display-none.register-appName-error
                .input-field.col.s12
                    input#email.validate(type='email', name='email', required)
                    label(for='email') #{santander_totta.form.input.email}
                    p.error.display-none.register-email-error
                .input-field.col.s12
                    input#password.validate(type='password', name='password', required)
                    label(for='password') #{santander_totta.form.input.pass}
                    p.error.display-none.register-password-error
                .input-field.col.s12
                    input#cif.validate(type='text', name='cif', required)
                    label(for='cif') #{santander_totta.form.input.cif}
                    p.error.display-none.register-license-error
                .input-field.col.s12
                    input#license.validate(type='text', name='license', required)
                    label(for='license') #{santander_totta.form.input.code}
                    p.error.display-none.register-license-error
            .register-form-btn
                button(type="submit", data-loading="#{register.loading}", data-text="#{santander_totta.form.call_to_action}").waves-effect.waves-light.btn-large.btn-upp
                    span #{santander_totta.form.call_to_action}
                p #{santander_totta.form.promo}
//- REGISTER PANEL :: "15 days free trial" (MOBILE - TABLET)
.row.register-form-mobile(data-aos='fade-up')
    a.col.s10.offset-s1.price-btn.btn-green(href='#free-trial', title='#{santander_totta.form.call_to_action}')
        span #{santander_totta.form.call_to_action}