//- MODAL :: FREE TRIAL
a.modal-action.modal-close.waves-effect.waves-green.btn-flat(title='#{modal.head.close}')
    i.icon.icon-cross
.modal-content
    h3 !{santander_totta.form.title}
    .row
        form(name="register", action="/register", method="post").col.s12.center
            input(type="hidden", name="customerType", value="UPPLICATION")
            p.error.general-error.display-none #{santander_totta.form.error.general}
            .input-field.col.s12
                i.icon.icon-mobile.prefix
                input#modal_app_name.validate(type='text', name='appName', required)
                label(for='modal_app_name') #{santander_totta.form.input.name}
                p.error.display-none.register-appName-error
            .input-field.col.s12
                i.icon.icon-mail.prefix
                input#modal_email.validate(type='email', name='email', required)
                label(for='modal_email') #{santander_totta.form.input.email}
                p.error.display-none.register-email-error
            .input-field.col.s12
                ii.icon.icon-key.prefix
                input#modal_pass.validate(type='password', name='password', required)
                label(for='modal_pass') #{santander_totta.form.input.pass}
                p.error.display-none.register-password-error
            .input-field.col.s12
                ii.icon.icon-key.prefix
                input#modal_code.validate(type='text', name='password', required)
                label(for='modal_code') #{santander_totta.form.input.code}
                p.error.display-none.register-password-error
            .input-field.col.s12
                button(type="submit", data-loading="#{register.loading}", data-text="#{santander_totta.form.call_to_action}").waves-effect.waves-light.btn-large.btn-upp
                    i.icon.icon-ok
                    span #{santander_totta.form.promo}
