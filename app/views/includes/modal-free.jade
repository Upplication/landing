//- MODAL :: FREE TRIAL
a.modal-action.modal-close.waves-effect.waves-green.btn-flat(title='#{modal.head.close}')
    i.icon.icon-cross
.modal-content
    h3 !{modal.head.register_modal}
    .row
        form(name="register", action="/register", method="post").col.s12.center
            input(type="hidden", name="customer-type", value="UPPLICATION")
            p.error.general-error.display-none #{register.error.general}
            .input-field.col.s12
                i.icon.icon-mobile.prefix
                input#modal-app-name.validate(type='text', name='app-name', required)
                label(for='modal-app-name') #{form.input.name}
                p.error.display-none.register-appName-error
            .input-field.col.s12
                i.icon.icon-mail.prefix
                input#modal-email.validate(type='email', name='email', required)
                label(for='modal-email') #{form.input.email}
                p.error.display-none.register-email-error
            .input-field.col.s12
                ii.icon.icon-key.prefix
                input#modal-pass.validate(type='password', name='password', required)
                label(for='modal-pass') #{form.input.pass}
                p.error.display-none.register-password-error
            .input-field.col.s12
                input#checkbox-modal-tos.validate(type='checkbox', name='checkbox-tos',required)
                label.tosText(for='checkbox-modal-tos') !{form.input.check_TOS}
            .input-field.col.s12
                button(type="submit", data-loading="#{register.loading}", data-text="#{register.call_to_action}").waves-effect.waves-light.btn-large.btn-upp
                    i.icon.icon-ok
                    span #{header.free_trial}
.modal-terms
    ul.hover-anim
        li
            | #{modal.footer.accept}&nbsp;
            a(href='#{external.tos.url}', target='_blank', title='#{modal.footer.terms}') #{modal.footer.terms}