//- CONTACT ::
section#contact
    .contact-title.left
        h4.titulo #{contact.contact_title}
        span.bold.white
            p.ct-t1 #{contact.contact_subtitle}
            p.ct-t2 #{contact.call_to_action}
    .contact-form
        form.ct-form(action='')
            input#attendant(type='hidden', name='attendant', value='')
            input#phone(type='hidden', name='phone', value='N/A')
            input#name.form-data(type='text', name='name', placeholder='#{contact.name_placeholder}')
            input#emailForm.form-data(type='email', name='email', placeholder='#{contact.email_placeholder}')
            textarea#comment.form-data(name='comment', placeholder='#{contact.comment_placeholder}')
            .check
                input#accept-privacy.checkbox(type='checkbox', name='accept')
                label.ch-label(for='accept-privacy') !{contact.tos_checkbox}
                    input#lopd(type='checkbox', name='lopd', style='display: none')
                // CAPTCHA goes here if necessary
                input.submit-btn.bold(type='submit', name='', value='#{contact.send_button}')
            //.form-accept.thinest
                .tick
                p.fa-t1 Thanks for your message.
                p.fa-t2 We'll be in touch soon!
