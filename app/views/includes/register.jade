// REGISTER PANEL :: "15 days free trial" (DESKTOP - LAPTOP)
.register-form.right(data-aos='fade-up')
    .row.register-top
        form(name="register", action="/register", method="post").col.s12.register-form-block
            input(type="hidden", name="customerType", value="UPPLICATION")
            p.error.general-error.display-none #{register.error.general}
            .row.marBot10
                .input-field.col.s12
                    input#app_name.validate(type='text', name='appName', required)
                    label(for='app_name') #{form.input.name}
                        p.error.display-none.register-appName-error
                .input-field.col.s12
                    input#email.validate(type='email', name='email', required)
                    label(for='email') #{form.input.email}
                        p.error.display-none.register-email-error
                .input-field.col.s12
                    input#password.validate(type='password', name='password', required)
                    label(for='password') #{form.input.pass}
                        p.error.display-none.register-password-error
            .register-form-btn
                button(type="submit", data-loading="#{register.loading}", data-text="#{register.call_to_action}").waves-effect.waves-light.btn-large.btn-upp
                    span #{form.call_to_action}
                p #{modal.footer.free}
// REGISTER PANEL :: "15 days free trial" (MOBILE - TABLET)
.row.register-form-mobile(data-aos='fade-up')
    a.col.s10.offset-s1.price-btn.btn-green.modal-trigger(href='#free-trial', title='#{header.free_trial}')
        span #{form.call_to_action}