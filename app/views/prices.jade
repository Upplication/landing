                                            | !{prices.rates.all_push}
                                a.order-btn(href='#free-trial', title='#{register.call_to_action}')
                                    | #{register.call_to_action}
                                    i.icon.icon-left.hover-anim
                        .clearfix
                        .col.s12
                            .alert.alert-info(role='alert')
                                span.monthless
                                    i.icon.icon-money
                                    | !{prices.rates.monthless}
                .row
                    .col.s12.m8.offset-m3.tax.currency-selector
                        p
                            i.icon.icon-asterisk
                            i.icon.icon-info
                            | #{prices.rates.choose_currency}
                            a(data-currency="EUR") EUR
                            a(data-currency="USD") USD
                            a(data-currency="MXN") MXN
                    .col.s12.m8.offset-m2.tax
                        p
                            i.icon.icon-asterisk
                            | !{prices.rates.with_tax}

                        p
                            i.icon.icon-info
                            | !{prices.rates.exchange_rate}
                        p
                            i.icon.icon-asterisk
                            i.icon.icon-asterisk
                            | !{prices.rates.appleStore}

                //- Common Features for all plans
                .plans-head.center-align
                    .row
                        .col.s12.m10.offset-m1.prices-common-features(data-aos='zoom-in')
                            p #{prices.rates.rate_sub}
                            ul
                                li
                                    img(src='#{localConfig.base_path}/images/home/icons/upp_circle-claim_support-girl.svg', title='#{prices.rates.sub1}', alt='#{prices.rates.sub1}')
                                    | !{prices.rates.sub1}
                                li
                                    img(src='#{localConfig.base_path}/images/home/icons/upp_circle-claim_markets-upload.svg', title='#{prices.rates.sub2}', alt='#{prices.rates.sub2}')
                                    | !{prices.rates.sub2}
                                li
                                    img(src='#{localConfig.base_path}/images/home/icons/upp_circle-claim_multidevice.svg', title='#{prices.rates.sub3}', alt='#{prices.rates.sub3}')
                                    | !{prices.rates.sub3}
                                li
                                    img(src='#{localConfig.base_path}/images/home/icons/upp_circle-claim_tutor-boy.svg', title='#{prices.rates.sub4}', alt='#{prices.rates.sub4}')
                                    | !{prices.rates.sub4}
                                li
                                    img(src='#{localConfig.base_path}/images/home/icons/upp_circle-claim_dashboard.svg', title='#{prices.rates.sub5}', alt='#{prices.rates.sub5}')
                                    | !{prices.rates.sub5}
