extend base/v2/base

block vars
   - var title = prices._meta_title
   - var description = prices._meta_description
   - var keywords = prices._keywords
   - var cssClass = 'prices'

block css
   link(rel='stylesheet', href='#{localConfig.base_path}/styles/prices/prices.css')

block content

    //- MIXIN Declarations
    mixin webapp
        a(href='#', title='!{prices.rates.app_web}')
            i.icon.icon-desktop-alt
            i.icon.icon-android
            i.icon.icon-apple
            | !{prices.rates.app_web}


    //- CLIENTS
    .clients
        .container
            //- PRICING PLANS
            #pricing.pricing-tables.pricing-tables-mobile.scrollspy
                h4.headTitles.center-align #{prices.rates.rate_intro}
                .row
                    .col.s12.offset-m2.m8
                        ul.tabs
                            li.tab.col.s12.m6
                                a.active(href='#mensual', title='#{prices.rates.monthly}') !{prices.rates.monthly}
                            li.tab.col.s12.m6
                                a(href='#anual', title='#{prices.rates.yearly}') !{prices.rates.yearly}
                    //- Plan Mensual
                    #mensual.col.s12.m10.offset-m1
                        .col.s12.m4.mobile-prices(data-aos='fade-right')
                            .pricing-table-grid.center-img
                                h3 #{prices.rates.basic}
                                h5 #{prices.rates.subtitles.basic}
                                img(src='#{localConfig.base_path}/images/home/icons/rocket-copper.svg', alt='#{prices.rates.subtitles.basic}', title='#{prices.rates.subtitles.basic}')
                                ul
                                    li.price-container.price-currency-eur
                                        span
                                            span.price(data-price="9.95")
                                            em
                                                em.currency-image
                                                em #{prices.rates.per_month}
                                    li
                                        //- MIXIN Use
                                        +webapp
                                    li
                                        a(href='#', title='#{prices.rates.icons.statistics}')
                                            i.icon.icon-chart-line
                                            | !{prices.rates.statistics}
                                    li
                                        a(href='#', title='#{prices.rates.icons.bullhorn}')
                                            i.icon.icon-megaphone
                                            | !{prices.rates.bullhorn}
                                    li
                                        a(href='#', title='#{prices.rates.icons.sign}')
                                            i.icon.icon-pencil
                                            | !{prices.rates.sign}
                                    li
                                        a(href='#', title='#{prices.rates.icons.no_push}')
                                            i.icon.icon-paper-plane
                                            | !{prices.rates.no_push}
                                a.order-btn(href='#free-trial', title='#{register.call_to_action}')
                                    | #{register.call_to_action}
                                    i.icon.icon-left.hover-anim
                        .col.s12.m4.mobile-prices(data-aos='flip-left')
                            img.responsive-img.best-seller(src='#{localConfig.base_path}/images/home/icons/badge_winner.svg', title='#{prices.rates.topsale}', alt='#{prices.rates.topsale}')
                            .pricing-table-grid.with-hover.center-img
                                h3 #{prices.rates.professional}
                                h5 #{prices.rates.subtitles.professional}
                                img(src='#{localConfig.base_path}/images/home/icons/rocket-silver.svg', alt='#{prices.rates.subtitles.professional}', title='#{prices.rates.subtitles.professional}')
                                ul
                                    li.price-container.price-currency-eur
                                        span
                                            span.price(data-price="29.95")
                                            em
                                                em.currency-image
