                                img(src='#{localConfig.base_path}/images/home/icons/rocket-silver.svg', alt='#{prices.rates.subtitles.professional}', title='#{prices.rates.subtitles.professional}')
                                ul
                                    li.price-container.price-currency-eur
                                        span
