                                        +webapp
                                    li
                                        a(href='#', title='#{prices.rates.icons.statistics}')
                                            i.icon.icon-chart-line
                                            | !{prices.rates.statistics}
                                    li
                                        a(href='#', title='#{prices.rates.icons.bullhorn}')
                                            i.icon.icon-megaphone
                                            | !{prices.rates.no_bullhorn}
                                    li
                                        a(href='#', title='#{prices.rates.icons.no_sign}')
                                            i.icon.icon-pencil
                                            | !{prices.rates.no_sign}
                                    li
                                        a(href='#', title='#{prices.rates.icons.four_push}')
                                            i.icon.icon-paper-plane
                                            | !{prices.rates.four_push}
                                a.order-btn(href='#free-trial', title='#{register.call_to_action}')
                                    | #{register.call_to_action}
                                    i.icon.icon-left.hover-anim
                        .col.s12.m4.mobile-prices(data-aos='flip-right')
                            .pricing-table-grid.pricing-table-custom.center-img
                                h3 #{prices.rates.premium}
                                h5 #{prices.rates.subtitles.premium}
                                img(src='#{localConfig.base_path}/images/home/icons/rocket-gold.svg', alt='#{prices.rates.subtitles.create}', title='#{prices.rates.subtitles.create}')
                                ul
                                    li.price-container.price-currency-eur
                                        span
                                            span.price(data-price="59.95")
                                            em
                                                em.currency-image
                                                em #{prices.rates.per_month}
                                    li
                                        //- MIXIN Use
                                        +webapp
                                    li
                                        a(href='#', title='#{prices.rates.icons.more}')
                                            i.icon.icon-ok
                                            | !{prices.rates.more}
                                    li
                                        a(href='#', title='#{prices.rates.icons.course}')
                                            i.icon.icon-book-open
                                            | !{prices.rates.course}
                                    li
                                        a(href='#', title='#{prices.rates.icons.sticker}')
                                            i.icon.icon-graduation-cap
                                            | !{prices.rates.sticker}
                                    li
                                        a(href='#', title='#{prices.rates.icons.all_push}')
                                            i.icon.icon-paper-plane-alt
                                            | !{prices.rates.all_push}
                                a.order-btn(href='#free-trial', title='#{register.call_to_action}')
                                    | #{register.call_to_action}
                                    i.icon.icon-left.hover-anim
                        .clearfix
                    //- Plan Anual
                    #anual.col.s12.m10.offset-m1
                        .col.s12.m4.mobile-prices(data-aos='fade-right')
                            .pricing-table-grid.center-img
