extends base/aplicateca/base
block vars
    - var title = terms_aplicateca._meta_title
    - var description = terms_aplicateca._meta_description
    - var keywords = terms_aplicateca._keywords
    - var cssClass = 'terms'
block content
    section
        h2 #{terms_aplicateca.sections.title}
        div.container.margin
            each section in terms_aplicateca.sections.sections
                h1 #{section.title}
                each ch in section.children
                    if typeof ch != 'object'
                        p #{ch}
                    else
                        h3 #{ch.title}
                        each subchild in ch.children
                            p #{subchild}