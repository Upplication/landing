extend base/aplicateca/base

block vars
    - var title = prices_aplicateca._meta_title
    - var description = prices_aplicateca._meta_description
    - var keywords = prices_aplicateca._keywords
    - var cssClass = 'prices'

block content
    section#plans.bottom-space
        script(type='text/javascript').
            $UPP.url = "#{prices_aplicateca._url}";
            $UPP.month = "#{prices_aplicateca.month}";
            $UPP.year = "#{prices_aplicateca.year}";
            $UPP.euro = "#{prices_aplicateca.euro}";
            $UPP.dollar = "#{prices_aplicateca.dollar}";
            $UPP.pricesEuro = [
                "#{prices_aplicateca.plans[0].price}",
            "#{prices_aplicateca.plans[1].price}",
            "#{prices_aplicateca.plans[2].price}",
            "#{prices_aplicateca.special_plans[0].price}"
            ];
            $UPP.pricesDollars = [
            "#{prices_aplicateca.plans[0].price_dollars}",
            "#{prices_aplicateca.plans[1].price_dollars}",
            "#{prices_aplicateca.plans[2].price_dollars}",
            "#{prices_aplicateca.special_plans[0].price_dollars}"
            ];
            $UPP.pricesEuroYear = [
            "#{prices_aplicateca.plans[0].price_yearly}",
            "#{prices_aplicateca.plans[1].price_yearly}",
            "#{prices_aplicateca.plans[2].price_yearly}",
            "#{prices_aplicateca.special_plans[0].price_yearly}"
            ];
            $UPP.pricesDollarsYear = [
            "#{prices_aplicateca.plans[0].price_yearly_dollars}",
            "#{prices_aplicateca.plans[1].price_yearly_dollars}",
            "#{prices_aplicateca.plans[2].price_yearly_dollars}",
            "#{prices_aplicateca.special_plans[0].price_yearly_dollars}"
            ];

        div.container

            // PRICING PLANS TABLES:
            h4.headTitles #{prices_aplicateca.title}

            div.plans.prices-aplicateca
                each plan in prices_aplicateca.plans
                    div.plan(class="#{plan.class_name}")
                        div.plan-header
                            h3 #{plan.name}
                            p #{plan.surname}
                            img(src='#{plan.img.src}', alt='#{plan.img.title}', title='#{plan.img.title}')
                            div.price
                                span(class="price") #{plan.price}
                                span(class="price-details")
                                    span(class="currency") #{prices_aplicateca.euro}
                                    span(class="period") #{prices_aplicateca.month}
                                    span(class="notice") #{prices_aplicateca.iva_included}
                            if plan.class_name == 'plan-professional'
                                span.most-popular #{prices_aplicateca.most_popular_plan}

                        div.plan-features
                            ul
                                each feature in plan.features
                                    li
                                        i(class="#{feature.icon_class}")
                                        span.feature-title !{feature.title}

                        a(class="btn #{plan.btn_class}", href="https://www.aplicateca.es/upplication") #{prices_aplicateca.free_trial}
                div.clear

            div.clear

            // Exceptions text
            div.prices-aplicateca-exceptions
                p #{prices_aplicateca.permanency}

            // "Contact Us" Block
            div.custom-app
                div
                    div
                        h2 #{prices_aplicateca.custom_app.title}
                        h3 #{prices_aplicateca.custom_app.subtitle}
                    div
                        a.btn.btn-green(href='#{prices_aplicateca.custom_app.btn}', title='#{prices_aplicateca.custom_app.subtitle}')
                            i.icon.icon-mail
                            | #{prices_aplicateca.custom_app.copy}

    // All pricing plans common Features
    section#all-plans-include.bottom-space
        div.container
            h2 #{prices_aplicateca.all_plans_include.title}

            ul.plans-features
                each feature in prices_aplicateca.all_plans_include.list
                    li
                        i(class="#{feature.icon}")
                        span !{feature.text}